} else {
    $sql= "INSERT INTO profiles (user_id, about, gender, dob, sport1, sport2, sport3, country)
    VALUES (?,?,?,?,?,?,?,?)";

$stmt = $mysqli->stmt_init();




if ( ! $stmt->prepare($sql)) {
die("SQL error: ". $mysqli->error);
}

/**binding values to the placeholder characters */

$stmt->bind_param("ssssssss",
              $_REQUEST["user_id"],
              $_REQUEST["about"],
              $_REQUEST["gender"],
              $_REQUEST["dob"],
              $_REQUEST["sport1"],
              $_REQUEST["sport2"],
              $_REQUEST["sport3"],
              $_REQUEST["country"],
              );
             


$stmt->execute();
}
